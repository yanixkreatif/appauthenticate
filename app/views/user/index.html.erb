<h1>Listing User</h1>

<table class="table table-stripped">
  <thead>
    <tr> 
      <th>email</th> 
       <th>role</th> 
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr> 
        <td><%= user.email %></td> 
         <td><%= user.role %></td> 
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
         <td><%= link_to 'Hapus', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New user', new_user_path %>